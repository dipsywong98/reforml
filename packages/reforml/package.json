{
  "name": "reforml",
  "version": "1.0.0",
  "description": "react form defined by yaml",
  "author": "dipsywong98",
  "license": "MIT",
  "repository": "dipsywong98/reforml",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "run-p build:**",
    "build:js": "microbundle-crl --no-compress --format modern,cjs",
    "build:css": "node-sass --output-style expanded src/stylesheets/index.scss > dist/reforml.css",
    "watch:js": "microbundle-crl watch --no-compress --format modern,cjs",
    "watch:css": "node-sass --watch --output-style expanded src/stylesheets/index.scss -o dist/",
    "start": "run-p watch:**",
    "watch": "run-p watch:**",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint src/**/*.*",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd ../example && yarn install && yarn run build"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.38",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.7",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "microbundle-crl": "^0.13.10",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "typescript": "^3.9.5"
  },
  "files": [
    "dist"
  ],
  "dependencies": {}
}
