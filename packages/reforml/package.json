{
  "name": "reforml",
  "version": "0.1.1",
  "description": "react form defined by yaml",
  "author": "dipsywong98",
  "license": "MIT",
  "repository": "dipsywong98/reforml",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "run-p build:**",
    "build:js": "microbundle-crl --no-compress --format modern,cjs",
    "build:css": "node-sass --output-style expanded src/stylesheets/index.scss -o dist/",
    "watch:js": "microbundle-crl watch --no-compress --format modern,cjs",
    "watch:css": "node-sass --watch --output-style expanded src/stylesheets/index.scss -o dist/",
    "start": "run-p watch:**",
    "watch": "run-p watch:**",
    "prepublishOnly": "run-s build",
    "test": "run-s test:unit test:eslint test:build",
    "test:build": "run-s build",
    "test:lint": "run-p test:eslint test:sass-lint",
    "test:eslint": "eslint --ext .js,.jsx,.ts,.tsx src",
    "test:sass-lint": "sass-lint --config .sass-lint.yml 'src/stylesheets/*.scss'",
    "test:unit": "cross-env CI=1 SKIP_PREFLIGHT_CHECK=true react-scripts test --env=jsdom",
    "test:coverage": "cross-env CI=1 SKIP_PREFLIGHT_CHECK=true react-scripts test --env=jsdom --coverage",
    "test:watch": "cross-env SKIP_PREFLIGHT_CHECK=true react-scripts test --env=jsdom",
    "predeploy": "cd ../example && yarn install && yarn run build"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^10.4.4",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.38",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.7",
    "@typescript-eslint/eslint-plugin": "3",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-eslint": "^10.0.3",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-config-standard-with-typescript": "^18.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-standard": "^4.0.1",
    "microbundle-crl": "^0.13.10",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "sass-lint": "^1.13.1",
    "typescript": "^3.9.5"
  },
  "files": [
    "dist"
  ]
}
